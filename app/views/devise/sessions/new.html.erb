<div class="max-w-[400px] w-full mx-auto p-4 my-10 flex flex-col items-center justify-center">
  <h2 class="title-h2"><%= t('.sign_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-item">
      <%= f.label :login, class: "form-label" %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-input-text" %>
    </div>

    <div class="form-item">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input-text" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-item">
        <%= f.check_box :remember_me, class: "form-input-checkbox" %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

    <%= f.submit t('.sign_in'), class: "w-full btn-primary mt-3 mb-4" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
