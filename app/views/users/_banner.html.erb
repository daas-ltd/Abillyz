<div class="relative w-full h-[300px] border shadow mb-4 overflow-hidden">
  <% if controller.action_name == 'edit' %>
    <div data-controller="active-storage-preview" class="w-full h-[300px]">
  <% end %>
    <% if user.banner.attached? %>
      <%= image_tag user.banner, class: 'absolute top-0 left-0 w-full h-full object-cover', "data-active-storage-preview-target": "preview" %>
    <% else %>
      <img class="absolute top-0 left-0 w-full h-full object-cover" data-active-storage-preview-target="preview">
    <% end %>
    <% if controller.action_name == 'edit' %>
      <%= form.label :banner, t('.edit'), class: "absolute-center cursor-pointer btn" %>
      <%= form.file_field :banner,
        data: {active_storage_preview_target: "file" },
        class: "hidden"
      %>
    <% end %>
  </div>
</div>
