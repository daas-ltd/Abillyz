<%= turbo_frame_tag 'modal' do %>
  <%= render 'shared/modal' do %>
    <h2 class="title-h2"><%= t('.title') %></h2>
    <%= form_with(url: '/users/settings', method: :patch, class: 'max-w-[600px] w-[300px]') do |form| %>

      <div class="form-item">
        <%= form.label 'setting[keymap]', t('.keymap'), class: "form-label" %><br />
        <%#= form.text_field :keymap, autofocus: true, autocomplete: "email", class: "form-input-text" %>
        <%= form.select 'setting[keymap]', Users::Setting.keymaps_for_select, selected: current_user.setting&.keymap %>
      </div>

      <%= form.submit "保存",
        class: "btn-primary w-full",
        data: {
          test_id: 'submit'
        }
      %>
    <% end %>
  <% end %>
<% end %>
